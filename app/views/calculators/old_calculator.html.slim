.jumbotron.jumbotron-fluid.position-relative.rounded
  a.rounded.back-link.mt-3.px-2 href=root_path
    .p.back-text
      = t 'calculators.buttons.to_main'
    = image_tag "icons/arrow-left.svg", class: "z-1"
  .d-flex.justify-content-around.flex-wrap.calculator_wrap.ms-5
    .calc-container.mx-5.mt-5
      = t('.form.description')
    = simple_form_for(:child, url: "#", html: { class: "simple_form_calculator calc-container",
                                              data: { controller: "input-child-info",
                                                      input_child_info_url_value: api_v1_diaper_calculators_url,
                                                      input_child_info_months_value: month_number("old"),
                                                      input_child_info_results_outlet: '.result' }}) do |form|
      .ms-5.inline.calc-item
        = form.input_field :years,
                            collection: years_number,
                            prompt: t('.form.years_prompt'),
                            class: 'rounded custom-select',
                            data: { input_child_info_target: 'year', action: 'input-child-info#yearChanged' }

      .ms-5.inline.calc-item
        = form.input_field :months,
                            collection: month_number("old"),
                            prompt: t('.form.months_prompt'),
                            class: 'rounded custom-select childs_months',
                            data: { input_child_info_target: 'month' }


      = form.hidden_field :product_category, collection: collection_product_category,
                                                    selected: t('.form.medium'),
                                                    data: { input_child_info_target: 'productCategory' }

      .block.mx-5.mt-4.mb-3
        = form.submit t('calculators.buttons.calculate'),
                      class: 'calculate-btn result-btn calc-item old-btn',
                      data: { action: 'input-child-info#submit' }

.container.calculation-results.result [data-controller='results']
  .row.row-l
    - [{ image: "diapers_to_buy.png", data_target: "diapersToBeUsed", text: t(".will_buy_diapers") },
      { image: "diapers_bought.png", data_target: "diapersUsed", text: t(".bought_diapers") },
      { image: "money_to_spent.png", data_target: "moneyWillBeSpent", text: t(".money_will_be_spent") },
      { image: "money_spent.png", data_target: "moneySpent", text: t(".money_spent") }].each do |item|
      .col-sm.result-card
        .img-border
          = image_tag item[:image], class: "rounded"
        span
          p [data-results-target=item[:data_target]] 0
          = item[:text]

.container.calculation-results
  .row
    .col-xl-8.result-card
      = render 'layouts/description_block'
    .col-sm.result-card
      button.calculate-btn.description-btn
        = render 'layouts/description_button'
