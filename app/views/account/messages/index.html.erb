<div class="container home">
  <table class="table">
    <caption class="sr-only">This table displays a list of messages.</caption>
    <thead>
      <tr>
        <th scope="col">#</th>
        <th scope="col"><%= t('.table.title') %></th>
        <th scope="col"><%= t('.table.email') %></th>
        <th scope="col"><%= t('.table.message') %></th>
        <th scope="col"><%= t('.table.show_more') %></th>
      </tr>
    </thead>
    <tbody>
      <% @messages.each do |message| %>
        <tr>
          <th scope="row"><%= message.id %></th>
          <td><%= message.title %></td>
          <td><%= message.email %></td>
          <td><%= message.message.first(40) %></td>
          <td class="text-center"><%= link_to account_message_path(id: message, locale: I18n.locale) do %>
            <i class="fa fa-eye"></i>
          <% end %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
