<%= turbo_frame_tag :diapers_periods do %>
  <% if categories.present? %>
    <table class="w-full table-auto">
      <% categories.each do |category| %>
        <tr id="<%= dom_id(category) %>">
          <td class="flex items-center py-2">
            <%= category.name %>
          </td>
          <td class="w-1/3">
            <%#= link_to(
                  '[Show]',
                  show_diapers_period_account_site_setting_path(category_id: category.id),
                  data: { turbo_frame: 'diapers_categories' }
                ) %>
          </td>
          <td class="w-1/4">
            <%= button_to(
                  '[Delete]',
                  account_diapers_periods_path(category_id: category.id),
                  method: :delete,
                  data: { turbo_confirm: 'Are you sure?' }
                ) %>
          </td>
        </tr>
      <% end %>
    </table>
  <% else %>
    <p>No diapers categories found. Add some from Available list</p>
  <% end %>

  <%= link_to(
        '[+ Add New]',
        available_categories_account_diapers_periods_path,
        data: { turbo_stream: true },
        class: "btn-grey"
      ) %>
<% end %>
