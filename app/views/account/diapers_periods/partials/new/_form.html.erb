<%= turbo_frame_tag :diapers_periods do %>
  <h3><strong><%= t(".new_period") %> <%= category.name %></strong></h3>
  <%= simple_form_for period, url: account_diapers_periods_path(locale: I18n.locale), html: { class: "mt-4" } do |form| %>

    <div class="group-wrapper">
      <div class="input-field-wrapper">
        <%= form.input :period_start,
              label: t(".period_start"),
              input_html: { class: "input-field", value: period.period_start || "--" } %>
      </div>

      <div class="input-field-wrapper">
        <%= form.input :period_end,
              label: t(".period_end"),
              input_html: { class: "input-field" } %>
      </div>
    </div>

    <div class="mt-4 group-wrapper">
      <div class="input-field-wrapper">
        <%= form.input :usage_amount,
              label: t(".usage_amount"),
              input_html: { class: "input-field" } %>
      </div>

      <div class="input-field-wrapper">
        <%= form.input :price,
              label: t(".price"),
              input_html: { class: "input-field" } %>
      </div>
    </div>

    <%= form.input :category_id, as: :hidden, input_html: { value: period.category_id } %>

    <div class="mt-4 actions md:w-1/2 md:mb-0">
      <%= form.submit t('buttons.create')%>
      <%= link_to(
      t(".back_button"),
      account_diapers_periods_path(category_id: period.category_id),
      class: "btn-grey",
      data: { turbo_stream: true }
    ) %>
    </div>
  <% end %>
<% end %>
