<h1>New Feature Flag</h1>

<%= form_with model: @feature_flag, url: account_feature_flags_path do |form| %>
  <% if @feature_flag.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@feature_flag.errors.count, "error") %> prohibited this feature flag from being saved:</h2>
      <ul>
        <% @feature_flag.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :name %>
    <%= form.text_field :name %>
  </div>

  <div class="field">
    <%= form.label :enabled %>
    <%= form.check_box :enabled %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>

<%= link_to 'Back', account_feature_flags_path %>
